<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
         <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
         
    </style>
    <style name="AppThemeForOrder" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
         <item name="vpiTabPageIndicatorStyle">@style/OrderTabPageIndicator</item>
    </style>
    
    <style name="wode_font_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/fontcolor</item>
        <item name="android:background">@color/white</item>
    </style>
    <!-- indicator  style -->
    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:textColor">@color/indicator_font_color</item>
        <item name="android:textSize">16sp</item>    
        <item name="android:background">@drawable/indicator_bg</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="AppThemeForGoodsDetail" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
         <item name="vpiTabPageIndicatorStyle">@style/GoodsDetailTabPageIndicator</item>
    </style>
    <!--goods detail indicator  style -->
    <style name="GoodsDetailTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>    
        <item name="android:background">@drawable/order_indicator_bg</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    
    <style name="OrderTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:textColor">@color/order_indicator_font_color</item>
        <item name="android:textSize">16sp</item>    
        <item name="android:background">@drawable/order_indicator_bg</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="order_font_style">
        <item name="android:textColor">@color/fontcolor</item>
        <item name="android:textSize">12sp</item>
    </style>
	<style name="submit">
        <item name="android:background">@drawable/theme_button_bg</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>
    
	   <style name="customButton">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@drawable/bg_custom_button</item>
    </style>

    <style name="setting_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/fontcolor</item>
        <item name="android:padding">15dp</item>
    </style>
    
    <style name="login_edit_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/qianhui</item>
        <item name="android:textColorHint">@color/qianhui</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
