<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="actionBarSize">@dimen/actionbar_size</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionBarStyle"> @style/MyActionBarStyle</item>
         <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
         
    </style>
    
    <!-- acitonbar 样式 -->
    <style name="MyActionBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/theme</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>
    
    <style name="SplashStyle" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>  
        <!-- 填充屏幕 -->
          <item name="android:windowFullscreen">true</item>
          <item name="android:windowContentOverlay">@null</item>   
    </style>
    
    <!-- 透明主题 -->
    <style name="Theme.AppStartLoadTranslucent" parent="android:Theme">    
          <item name="android:windowIsTranslucent">true</item>   
          <item name="android:windowNoTitle">true</item>
          <!-- 填充屏幕 -->
          <item name="android:windowFullscreen">true</item>
          <item name="android:windowContentOverlay">@null</item>    
	</style> 
	
    <style name="AppThemeForOrder" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="actionBarSize">@dimen/actionbar_size</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionBarStyle"> @style/MyActionBarStyle</item>
         <item name="vpiTabPageIndicatorStyle">@style/OrderTabPageIndicator</item>
    </style>
    
    <style name="wode_font_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/fontcolor</item>
        <item name="android:background">@color/white</item>
    </style>
    <!-- indicator  style -->
    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:textColor">@color/indicator_font_color</item>
        <item name="android:textSize">16sp</item>    
        <item name="android:background">@drawable/indicator_bg</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="AppThemeForGoodsDetail" parent="AppTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
         <item name="vpiTabPageIndicatorStyle">@style/GoodsDetailTabPageIndicator</item>
    </style>
    <!--goods detail indicator  style -->
    <style name="GoodsDetailTabPageIndicator" parent="Widget.TabPageIndicator">
