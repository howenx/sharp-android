<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
      
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
  <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="actionBarSize">@dimen/actionbar_size</item>
        <item name="actionBarStyle"> @style/MyActionBarStyle</item>
        <item name="colorPrimary">@color/theme</item>
        <item name="colorPrimaryDark">@color/btn_pin_pressed</item>
        <item name="colorAccent">@color/theme</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/Animation_Right</item>
    </style>

    <style name="ActivityAnimationStyle" parent="@android:style/Animation"></style>

    <style name="Animation_Right">
        <item name="android:activityOpenEnterAnimation">@anim/pl_slide_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/pl_slide_out_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/pl_slide_in_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/pl_slide_out_to_right</item>
    </style>

    <!-- acitonbar 样式 -->
    <style name="MyActionBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/theme</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>

    <style name="SplashStyle" parent="AppBaseTheme">

        <!-- 填充屏幕 -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MainActivityTheme" parent="AppTheme">
        <item name="tabView">@style/MainTabView</item>
    </style>

    <style name="MainTabView" parent="TabView">
        <item name="android:textColor">@color/indicator_font_color_selector</item>
        <item name="android:textSize">12sp</item>
        <item name="iconWidth">25dp</item>
        <item name="iconHeight">25dp</item>
    </style>

    <style name="AppThemeForOrder" parent="AppTheme">
        <item name="vpiTabPageIndicatorStyle">@style/OrderTabPageIndicator</item>
    </style>

    <style name="wode_font_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/fontcolor</item>
        <item name="android:background">@drawable/btn_mine_selector</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:drawableRight">@drawable/hmm_next_page_gray</item>
    </style>
    <!-- indicator  style -->
    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:textColor">@color/indicator_font_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/indicator_bg</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="OrderTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:textColor">@color/order_indicator_font_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/order_indicator_bg</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="order_font_style">
        <item name="android:textColor">@color/fontcolor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="submit">
        <item name="android:background">@drawable/btn_theme_radius_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="submit_mid_m">
        <item name="android:background">@drawable/btn_theme_radius_selector</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="my_login_regist">
        <item name="android:background">@drawable/white_corner_bg</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/theme</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="submit_hui">
        <item name="android:background">@drawable/huise_button_bg</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="submit_mid">
        <item name="android:background">@drawable/theme_button_bg</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="submit_mid_huise">
        <item name="android:background">@drawable/huise_button_bg</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="customButton">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="setting_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/fontcolor</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_underline_selector</item>
    </style>

    <style name="login_edit_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/huise</item>
        <item name="android:textColorHint">@color/huise</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="checkbox_style">
        <item name="android:button">@drawable/check_box</item>
    </style>

    <!-- 设置dialog 样式 -->
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item> <!-- 边框 -->
        <item name="android:windowIsFloating">true</item> <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item> <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item> <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item> <!-- 自己想要的背景 -->
        <item name="android:backgroundDimEnabled">true</item> <!-- 模糊 -->
    </style>
    <!-- 设置dialog 样式 -->
    <style name="CustomDimDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item> <!-- 边框 -->
        <item name="android:windowIsFloating">true</item> <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item> <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item> <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item> <!-- 自己想要的背景 -->
        <item name="android:backgroundDimEnabled">false</item> <!-- 模糊 -->
    </style>

    <!-- 设置sharewindow 样式 -->
    <style name="BottomShowDialog" parent="@style/CustomDialog">
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
    </style>
    <!-- 设置全凭dialog样式 -->
    <style name="FullscreenDialog" parent="@style/CustomDialog">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- popwindow 显示与消失的动画 -->
    <style name="popwindow_anim_style">

        <!-- 指定显示的动画xml -->
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <!-- 指定消失的动画xml -->
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
    </style>

    <style name="youhui1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/fontcolor</item>
    </style>

    <style name="youhui2">
        <item name="android:textSize">13sp</item>
