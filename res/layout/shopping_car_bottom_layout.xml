<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F9F3">
    <TextView 
        android:id="@+id/goods_nums"
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品数量：0"
        android:textColor="@color/fontcolor"
        android:textSize="13sp"/>
    <TextView 
        android:id="@+id/total_price"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/goods_nums"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="总金额：¥0.00"
        android:textSize="13sp"
        android:textColor="@color/fontcolor"/>
    <View 
        android:id="@+id/xian"
        android:layout_below="@id/goods_nums"
        android:layout_height="0.2dp"
        android:layout_width="match_parent"
        android:background="@color/huise"/>

    <ImageView 
        android:id="@+id/all"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="5dp"
        android:layout_below="@id/xian"
        android:scaleType="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/check_box"/>
    <TextView 
        android:id="@+id/all_font"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/xian"
        android:layout_toRightOf="@id/all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="全选"
        android:textSize="14sp"
        android:textColor="@color/fontcolor"/>
    <LinearLayout 
        android:layout_below="@id/xian"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/all_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView 
        android:id="@+id/end_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="应付金额：¥0.00"
        android:textSize="14sp"
        android:textColor="@color/red"/>
    <TextView 
        android:id="@+id/cost_price"
        android:paddingBottom="15dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="已节省：¥0"
        android:textSize="12sp"
        android:textColor="@color/huise"/>
    </LinearLayout>
    <TextView 
        android:id="@+id/pay"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_margin="15dp"
        android:layout_below="@id/xian"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="去结算"
        android:background="@drawable/theme_button_bg"
        android:textSize="15sp"
        android:textColor="@color/white"/>

</RelativeLayout>
