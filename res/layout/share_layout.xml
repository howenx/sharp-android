<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/bg_theme_topline"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="30dp"
    android:paddingTop="20dp" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="分享"
        android:textColor="@color/fontcolor"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/copy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/driver_padding_normal"
            android:drawableTop="@drawable/hmm_icon_copy"
            android:gravity="center"
            android:text="秘美令" />

        <TextView
            android:id="@+id/qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/driver_padding_normal"
            android:drawableTop="@drawable/hmm_icon_qq"
            android:gravity="center"
            android:text="QQ" />

        <TextView
            android:id="@+id/weixin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/driver_padding_normal"
            android:drawableTop="@drawable/hmm_icon_wechat"
            android:gravity="center"
            android:text="微信" />

        <TextView
            android:id="@+id/weixinq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/driver_padding_normal"
            android:drawableTop="@drawable/hmm_icon_friends"
            android:gravity="center"
            android:text="朋友圈" />
    </LinearLayout>

</LinearLayout>