<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@color/bg" 
    android:paddingTop="20dp"
    android:paddingBottom="30dp">
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="分享"
        android:textSize="18sp"
        android:textColor="@color/fontcolor"/>
    <TextView
        android:id="@+id/copy"
        android:layout_marginLeft="15dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="复制"
        android:drawableTop="@drawable/icon_copy"/>
    <LinearLayout 
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/qq"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="QQ"
        android:drawableTop="@drawable/umeng_socialize_qq_on"/>
    <TextView 
        android:id="@+id/weixin"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="微信"
        android:drawableTop="@drawable/umeng_socialize_wechat"/>
    <TextView 
        android:id="@+id/weixinq"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="朋友圈"
        android:drawableTop="@drawable/umeng_socialize_wxcircle"/>
    <TextView 
        android:id="@+id/sina"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="微博"
        android:drawableTop="@drawable/umeng_socialize_sina_on"/>
	</LinearLayout>
</LinearLayout>
