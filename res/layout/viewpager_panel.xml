<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.hanmimei.view.viewflow.ViewFlow
        android:id="@+id/my_viewflow"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#00252525"
        android:gravity="center"
        android:padding="3dip" >

        <com.hanmimei.view.viewflow.CircleFlowIndicator
            android:id="@+id/my_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:padding="4dip"
            app:activeColor="@color/theme"
            app:activeRadius="1dp"
            app:activeType="fill"
            app:circleSeparation="15dip"
            app:inactiveColor="@color/qianhui"
            app:inactiveType="fill" />
    </LinearLayout>

    <ImageView
        android:id="@+id/btn_turn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_margin="18dp"
        android:alpha="0.8"
        android:contentDescription="@null"
        android:src="@drawable/tiaoguo" />

</FrameLayout>