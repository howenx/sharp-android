<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.hanbimei.view.viewflow.ViewFlow
        android:id="@+id/my_viewflow"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#00252525"
        android:gravity="center"
        android:padding="3dip" >

        <com.hanbimei.view.viewflow.CircleFlowIndicator
            android:id="@+id/my_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:padding="4dip"
            app:activeColor="#02AFFD"
            app:activeType="fill"
            app:circleSeparation="15dip"
            app:inactiveColor="#ccc"
            app:inactiveType="fill"
             />
    </LinearLayout>

</FrameLayout>