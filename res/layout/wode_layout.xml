<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <com.hanmimei.view.RoundImageView
            android:id="@+id/header"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_default_header" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
            
				
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录/注册"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" 
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/sex"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:contentDescription="@null"
                android:src="@drawable/icon_nan"
                android:visibility="gone" />
            
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/order"
        style="@style/wode_font_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:drawableRight="@drawable/icon_jiantou"
        android:padding="12dp"
        android:text="    我的订单" />
    <TextView 
	    android:id="@+id/pintuan"
	    android:layout_marginTop="15dp"
	    android:padding="12dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="    我的拼团"
	   style="@style/wode_font_style"
        android:drawableRight="@drawable/icon_jiantou"/>
	<LinearLayout 
	    android:id="@+id/youhui_linear"
        android:layout_marginTop="15dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:background="@color/white">
    <TextView
        android:id="@+id/youhui"
        style="@style/wode_font_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="    优惠券" />
    <TextView
        android:id="@+id/youhui_nums"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:gravity="right|center_vertical"
        android:text="@null" 
        android:textColor="@color/theme"
        android:textSize="12sp"
        android:background="@color/white"/>
	</LinearLayout>
    <!--
	<TextView 
	    android:id="@+id/pintuan"
	    android:layout_marginTop="15dp"
	    android:padding="12dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="    我的拼团"
	   style="@style/wode_font_style"/>
    -->
    <TextView
        android:id="@+id/address"
        style="@style/wode_font_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/icon_jiantou"
        android:layout_marginTop="15dp"
        android:padding="12dp"
        android:text="    管理收货地址" />

    <TextView
        android:id="@+id/collect"
        style="@style/wode_font_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="12dp"
        android:text="    我的收藏"
        android:visibility="gone" />

</LinearLayout>