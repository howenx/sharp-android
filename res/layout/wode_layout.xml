<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/mHeaderView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <com.hanmimei.view.RoundImageView
            android:id="@+id/header"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/hmm_mine_face_bg"
            android:src="@drawable/hmm_mine_face" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录/注册"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/sex"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:contentDescription="@null"
                android:src="@drawable/icon_nan"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/order"
                style="@style/wode_font_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/hmm_mine_order"
                android:text="我的订单" />

            <TextView
                android:id="@+id/pintuan"
                style="@style/wode_font_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/hmm_mine_pingou"
                android:text="我的拼团" />

            <TextView
                android:id="@+id/collect"
                style="@style/wode_font_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/hmm_mine_collection"
                android:text="我的收藏" />

            <LinearLayout
                android:id="@+id/youhui_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_mine_selector"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/youhui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/hmm_mine_coupon"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:text="优惠券"
                    android:textColor="@color/fontcolor"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/youhui_nums"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/hmm_mine_pagedown"
                    android:gravity="right|center_vertical"
                    android:text="@null"
                    android:textColor="@color/theme"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/address"
                style="@style/wode_font_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/hmm_mine_address"
                android:text="管理收货地址" />

            <TextView
                android:id="@+id/more"
                style="@style/wode_font_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_setting_more"
                android:text="更多" 
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>