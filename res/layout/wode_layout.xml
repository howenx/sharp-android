<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical" >
<!-- 
    <include layout="@layout/actionbar_custom_layout" />
 -->
 <LinearLayout 
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical">
    <LinearLayout
        android:id="@+id/mHeaderView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <com.kakao.kakaogift.view.CircleImageView
            android:id="@+id/faceView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/hmm_mine_face_bg"
            android:src="@drawable/hmm_mine_face"
            app:border_color="@color/white"
            app:border_width="1dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录/注册"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/sex"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:contentDescription="@null"
                android:src="@drawable/icon_nan"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/order"
                style="@style/wode_font_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/hmm_mine_order"
                android:text="我的订单" />

            <TextView
                android:id="@+id/pintuan"
                style="@style/wode_font_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/hmm_mine_pingou"
                android:text="我的拼团" />

            <TextView
                android:id="@+id/collect"
                style="@style/wode_font_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/hmm_mine_collection"
                android:text="我的收藏" />

            <LinearLayout
                android:id="@+id/youhui_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_mine_selector"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/youhui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/hmm_mine_coupon"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:text="我的优惠券"
                    android:textColor="@color/fontcolor"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/youhui_nums"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/hmm_mine_pagedown"
                    android:gravity="right|center_vertical"
                    android:text="@null"
                    android:textColor="@color/red"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/address"
                style="@style/wode_font_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/hmm_mine_address"
                android:text="管理收货地址" />
            <TextView
                android:id="@+id/settings"
                style="@style/wode_font_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/hmm_mine_address"
                android:text="设置" />
            <TextView
                android:id="@+id/exit"
                style="@style/textview_button_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="30dp"
                android:text="退出登录" 
                android:visibility="gone"/>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>