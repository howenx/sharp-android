<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/about"
        style="@style/setting_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/hmm_setting_about_us"
        android:text="关于我们" />

    <TextView
        android:id="@+id/idea"
        style="@style/setting_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/hmm_setting_opinion"
        android:text="意见反馈" />

    <TextView
        android:id="@+id/tel"
        style="@style/setting_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/hmm_setting_contact_us"
        android:text="联系我们" />

    <!--
    <TextView 
        android:id="@+id/push"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="    推送服务"
        style="@style/setting_text_style"/>
    <View 
        android:layout_height="0.1dp"
        android:layout_width="match_parent"
        android:background="@color/qianhui"/>
    -->

    <TextView
        android:id="@+id/del"
        style="@style/setting_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="清除缓存"
        android:visibility="gone"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/upd"
            style="@style/setting_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/hmm_setting_update"
            android:text="检测更新" />

        <TextView
            android:id="@+id/versionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="15dp"
            android:textColor="@color/fontcolor"
            android:textSize="14sp" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/qianhui" />

    <TextView
        android:id="@+id/exit"
        style="@style/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="退出登录" />

</LinearLayout>