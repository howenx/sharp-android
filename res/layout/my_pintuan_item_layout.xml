<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardElevation="3dp"
    card_view:cardCornerRadius="3dp" >
    <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/white">
    <ImageView 
        android:id="@+id/img"
        android:padding="0.1dp"
        android:layout_margin="@dimen/margin_small"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@null"
        android:background="@drawable/huise_border"/>
	<TextView 
	    android:id="@+id/title"
	    android:layout_margin ="5dp"
	    android:layout_toRightOf="@id/img"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:maxLines="2"
	    android:ellipsize="end"
	    android:text="@null"/>
	<View 
	    android:id="@+id/xian"
	    android:layout_marginTop="10dp"
	    android:layout_below="@id/img"
	    android:layout_height="0.1dp"
	    android:layout_width="match_parent"
	    android:background="@color/xian"/>
	<LinearLayout 
	    android:layout_marginTop="10dp"
	    android:layout_below="@id/xian"
	    android:orientation="horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	<TextView 
	    android:id="@+id/state"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
	    android:text="@null"
	    android:textSize="16sp"
	    android:textColor="@color/theme"/>
	<View 
	    android:layout_width="0dp"
	    android:layout_weight="1"
	    android:layout_height="1dp"/>
	

	<TextView
	    android:id="@+id/see_tuan"
	    android:paddingTop ="5dp"
	    android:paddingBottom="5dp"
	    android:paddingLeft="8dp"
	    android:paddingRight="8dp"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@drawable/theme_border"
	    android:text="@string/see_tuan"
	    android:textColor="@color/theme"
	    android:textSize="14sp" />
	
	<TextView 
	    android:id="@+id/see_order"
	    android:paddingTop ="5dp"
	    android:paddingBottom="5dp"
	    android:paddingLeft="8dp"
	    android:paddingRight="8dp"
	    android:layout_marginLeft="5dp"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/see_order"
	    android:textSize="14sp"
	    android:textColor="@color/white"
	    android:background="@drawable/theme_solid_bg"/>

	</LinearLayout>

	<TextView
	    android:id="@+id/price"
	    android:layout_width="200dp"
	    android:layout_height="40dp"
	    android:layout_alignBottom="@+id/img"
	    android:layout_alignLeft="@+id/title"
	    android:background="@drawable/price_bg"
		android:gravity="center"
	    android:text="@null"
	    android:textColor="@color/white"
	    android:textSize="16sp" />

</RelativeLayout>
</android.support.v7.widget.CardView>
