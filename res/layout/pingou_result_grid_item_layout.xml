<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.hanmimei.view.CircleImageView
        android:id="@+id/faceView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:border_width="1dp"
        app:border_color="@color/theme"
        android:src="@drawable/icon_default_header" />

    <TextView
        android:id="@+id/roleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/faceView"
        android:layout_alignTop="@+id/faceView"
        android:background="@drawable/bg_theme_master"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="团长"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:visibility="gone" />

</RelativeLayout>