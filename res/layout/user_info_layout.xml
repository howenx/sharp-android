<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/up_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:background="@drawable/bg_underline_selector" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="修改头像"
            android:textColor="@color/fontcolor"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/fjian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/hmm_mine_pagedown" />

        <com.hanmimei.view.RoundImageView
            android:id="@+id/headerImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/fjian"
            android:src="@drawable/ic_launcher"
            app:border_color="@color/qianhui"
            app:border_width="1dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/up_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:padding="15dp"
        android:background="@drawable/bg_underline_selector" >

        <TextView
            android:id="@+id/mm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:layout_centerVertical="true"
            android:textColor="@color/fontcolor"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/tjian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_jiantou"
            android:visibility="invisible" />
        <!--
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/tjian"
            android:text="hmm135208"
            android:textColor="@color/fontcolor"
            android:textSize="14sp" />
        -->

        <ImageView
            android:id="@+id/njian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/hmm_mine_pagedown" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/njian"
            android:text="女dhjehjde"
            android:textColor="@color/fontcolor"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/up_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:padding="15dp"
        android:background="@drawable/bg_underline_selector" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="性别"
            android:textColor="@color/fontcolor"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/sjian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/hmm_mine_pagedown" />

        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/sjian"
            android:text="女"
            android:textColor="@color/fontcolor"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
            android:padding="15dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_underline_selector" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:layout_centerVertical="true"
            android:textColor="@color/fontcolor"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/huise"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>