<?xml version="1.0" encoding="utf-8"?>
<com.hanmimei.view.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">

    <ImageView
        android:id="@+id/item_grida_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_margin="10dp"
        android:src="@drawable/icon_addpic_unfocused" />
    
   <ImageView
        android:id="@+id/btn_image_del"
        android:layout_width="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_height="20dp"
        android:visibility="gone"
        android:src="@drawable/hmm_image_del" />

</com.hanmimei.view.SquareLayout>