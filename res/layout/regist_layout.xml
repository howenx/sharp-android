      <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView 
            android:layout_margin="15dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/yanzhengma"
            android:textSize="16sp"
            android:textColor="@color/fontcolor"
            android:gravity="center"/>
        <EditText 
            android:id="@+id/yanzheng"
            android:maxLength="8"
            android:inputType="number|textCapCharacters"
            android:hint="@string/input_code"
            style="@style/login_edit_style"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_gravity="center_vertical"
            android:background="@null"/>
        <View 
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/qianhui"/>
        <com.hanmimei.view.YanZhengCodeTextView
       	 	 android:id="@+id/get_yanzheng"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:text="@string/get_code"
            android:textSize="14sp"
            android:textColor="@color/huise"
            android:gravity="center" /> 

    </LinearLayout>
      <RelativeLayout 
          android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView 
            android:id="@+id/text1"
            android:layout_margin="15dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/set_pwd"
            android:textSize="16sp"
            android:textColor="@color/fontcolor"
            android:gravity="center"/>
        <ImageView 
            android:id="@+id/show_pwd"
            android:padding="3dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_kejian"/>
        
        <ImageView 
            android:id="@+id/clear_pwd"
            android:padding="3dp"
            android:layout_toLeftOf="@id/show_pwd"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_guanbi"
            android:visibility="invisible"/>
        <EditText 
            android:id="@+id/pwd"
            android:layout_toRightOf="@id/text1"
            android:layout_toLeftOf="@id/clear_pwd"
            android:maxLength="12"
            style="@style/login_edit_style"
            android:hint="@string/input_pwd_do"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@null"/>
    </RelativeLayout>
    <View 
        android:layout_height="0.1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:background="@color/qianhui"/>
   <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView 
            android:id="@+id/text2"
            android:layout_margin="15dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/besure_pwd"
            android:textSize="16sp"
            android:textColor="@color/fontcolor"
            android:gravity="center"/>
        <ImageView 
            android:id="@+id/show_pwd2"
            android:padding="3dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_kejian"/>
        
        <ImageView 
            android:id="@+id/clear_pwd2"
            android:padding="3dp"
            android:layout_toLeftOf="@id/show_pwd2"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_guanbi"
            android:visibility="invisible"/>
        <EditText 
            android:id="@+id/two_pwd"
            android:layout_toRightOf="@id/text2"
            android:layout_toLeftOf="@id/clear_pwd2"
            android:paddingTop="5dp"
            android:maxLength="12"
            style="@style/login_edit_style"
            android:hint="@string/input_pwd_agin"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@null"/>
    </RelativeLayout>

       <TextView 
           android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
           android:layout_marginTop="30dp"
           android:id="@+id/regist"
            android:padding="8dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/regist"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/theme_button_bg"/>
       <LinearLayout 
           android:layout_margin="15dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
       <TextView 
           android:id="@+id/agree_us"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/regist_agree_us"
           android:textSize="12sp"
           android:textColor="@color/huise"
           android:visibility="gone"/>
       <TextView 
           android:id="@+id/yinsi"
           android:layout_marginLeft="15dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/regist_agree_us02"
           android:textSize="12sp"
           android:textColor="@color/theme"
           android:visibility="gone"/>
		</LinearLayout>
</LinearLayout>
