<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >
    <RelativeLayout 
        android:id="@+id/sys_msg"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView 
            android:id="@+id/img1"
            android:padding="10dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/icon_setting"
            android:background="@drawable/theme_button_bg"/>
        <TextView 
            android:id="@+id/title1"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="系统通知"
            android:textSize="16sp"
            android:textColor="@color/fontcolor"/>
        <TextView 
            android:id="@+id/tishi1"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@null"
            android:textSize="12sp"
            android:textColor="@color/theme"/>
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/xian"/>
    <RelativeLayout 
        android:id="@+id/good_msg"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView 
            android:id="@+id/img2"
            android:padding="10dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/icon_shangpin"
            android:background="@drawable/theme_button_bg"/>
        <TextView 
            android:id="@+id/title2"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="商品提醒"
            android:textSize="16sp"
            android:textColor="@color/fontcolor"/>
        <TextView 
            android:id="@+id/tishi2"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@null"
            android:textSize="12sp"
            android:textColor="@color/theme"/>
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/xian"/>
    <RelativeLayout 
        android:id="@+id/ac_msg"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView 
            android:id="@+id/img5"
            android:padding="10dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/icon_huodong"
            android:background="@drawable/theme_button_bg"/>
        <TextView 
            android:id="@+id/title5"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/img5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="优惠促销"
            android:textSize="16sp"
            android:textColor="@color/fontcolor"/>
        <TextView 
            android:id="@+id/tishi5"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@null"
            android:textSize="12sp"
            android:textColor="@color/theme"/>
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/xian"/>
    <RelativeLayout 
        android:id="@+id/wuliu_msg"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView 
            android:id="@+id/img3"
            android:padding="10dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/icon_wuliu"
            android:background="@drawable/theme_button_bg"/>
        <TextView 
            android:id="@+id/title3"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="物流通知"
            android:textSize="16sp"
            android:textColor="@color/fontcolor"/>
        <TextView 
            android:id="@+id/tishi3"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@null"
            android:textSize="12sp"
            android:textColor="@color/theme"/>
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/xian"/>
    <RelativeLayout 
        android:id="@+id/zichan_msg"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView 
            android:id="@+id/img4"
            android:padding="10dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/icon_zichan"
            android:background="@drawable/theme_button_bg"/>
        <TextView 
            android:id="@+id/title4"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/img4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="我的资产"
            android:textSize="16sp"
            android:textColor="@color/fontcolor"/>
        <TextView 
            android:id="@+id/tishi4"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@null"
            android:textSize="12sp"
            android:textColor="@color/theme"/>
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/xian"/>

</LinearLayout>
